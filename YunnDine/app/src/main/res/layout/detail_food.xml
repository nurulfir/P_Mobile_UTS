<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header with Food Image and Back Button -->
    <FrameLayout
        android:layout_width="412dp"
        android:layout_height="368dp"
        android:background="@drawable/round_background">

        <!-- Food Image -->
        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/Bakso"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:background="@drawable/round_background"/>

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:src="@drawable/back_button"/>
    </FrameLayout>

    <!-- Content Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="#F0F3FF"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Food Title and Favorite -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bakso Telur"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:fontFamily="@font/roboto_bold" />

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:src="@drawable/favorite" />
            </RelativeLayout>

            <!-- Rating and Reviews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Static Stars -->
                <LinearLayout
                    android:id="@+id/starContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 5 Static Stars -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8 (513)"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="15 Ulasan"
                    android:textSize="12sp"
                    android:textColor="@color/Gray" />
            </LinearLayout>

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rp 18.500"
                android:textColor="@color/Blue1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="280dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:background="@drawable/qty">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/minus_button" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="8dp" />

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/plus_button"
                    android:padding="4dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <!-- Additional Information -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Informasi tambahan:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAdditionalInfo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_background"
                android:hint="Masukkan informasi tambahan"
                android:padding="8dp"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Konfirmasi Pesanan"
        android:textAllCaps="false"
        android:enabled="false"
        android:backgroundTint="#F0F3FF"
        android:textColor="@color/Gray" />

</LinearLayout>
