<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bagian Profil dan Notifikasi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/profile_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/paixpey"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Profile Icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hi, Muhammad Nurul Firdaus\nIngin apa hari ini?"
                android:textSize="20sp"
                android:textColor="#333333" />

            <ImageButton
                android:id="@+id/notification_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/search"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Search Icon" />

            <ImageButton
                android:id="@+id/settings_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/notification"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Notification Icon" />
        </LinearLayout>

        <!-- Bagian Kategori Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/open_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/appetizer"
                android:text="Pembuka"
                android:background="@drawable/button_background"
                android:textColor="#333333" />

            <Button
                android:id="@+id/main_menu_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/dish"
                android:text="Menu Utama"
                android:background="@drawable/button_background"
                android:textColor="#333333"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/dessert_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/dessert"
                android:text="Penutup"
                android:background="@drawable/button_background"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Bagian Makanan Populer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Makanan Populer"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp" />

        <!-- Tambahkan elemen lainnya sesuai desain Anda -->

    </LinearLayout>
</ScrollView>
